{
  "name": "javascriptmn",
  "description": "JavaScriptMN website",
  "version": "3.0.0",
  "private": true,
  "author": "JavaScriptMN Organizers <javascriptmn@gmail.com>",
  "dependencies": {},
  "keywords": [
    "11ty"
  ],
  "license": "MIT",
  "scripts": {
    "deploy": "gh-pages -a -d dist -b master",
    "format": "prettier --write \"src/**/*.{js,json,scss,css}\"",
    "start": "run-p start:css start:js",
    "build": "run-s build:css build:js",
    "start:js": "eleventy --serve",
    "build:js": "eleventy",
    "start:css": "postcss ./src/css/tailwind.css -o ./src/css/tailwind.include.css -w",
    "build:css": "postcss ./src/css/tailwind.css -o ./src/css/tailwind.include.css --env production"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@tailwindcss/typography": "^0.2.0",
    "autoprefixer": "^10.0.1",
    "gh-pages": "^2.0.1",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "tailwindcss": "^1.8.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JavaScriptMN/javascriptmn.github.io"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
